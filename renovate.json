{
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "automerge": true
    },
    {
      "packageNames": ["node"],
      "enabled": false
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "timezone": "Pacific/Auckland",
  "schedule": "* 6-7 * * 1"
}
